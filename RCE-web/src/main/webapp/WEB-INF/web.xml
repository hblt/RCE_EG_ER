<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <!--Configuración del tiempo de session-->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--Configuración de Temas para primefaces-->
    <context-param>  
        <param-name>primefaces.THEME</param-name>  
        <param-value>bootstrap</param-value>  
    </context-param> 
    <!--Filtro para la conexion de Usuario-->
    <filter>
      <filter-name>FilterSecurity</filter-name>
      <filter-class>cl.hblt.security.Filter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>FilterSecurity</filter-name>
      <url-pattern>/views/*</url-pattern>
    </filter-mapping>
    <!--Pagina de Inicio-->
    <welcome-file-list>
        <welcome-file>views/desktop.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
